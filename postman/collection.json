{
  "info": {
    "name": "API Lambda DynamoDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Items",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items"
      }
    },
    {
      "name": "Create Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"id\":\"test-{{$timestamp}}\",\"name\":\"demo\"}"
        },
        "url": "{{apiBase}}/items"
      }
    },
    {
      "name": "Get Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items/test-{{$timestamp}}"
      }
    }
  ]
}