{
  "info": {
    "name": "Serverless Power Tuning API Tests",
    "_postman_id": "b19cd67f-16f4-42d3-979b-d7b0dcdb9941",
    "description": "CI smoke tests for Lambda + API Gateway + DynamoDB CRUD",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Items",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"List returns 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"id\":\"test-{{$timestamp}}\",\"name\":\"demo\"}"
        },
        "url": "{{apiBase}}/items"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Create returns 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "let body = JSON.parse(pm.response.text());",
              "pm.environment.set(\"lastCreatedId\", body.id);",
              "console.log(\" Stored created ID:\", body.id);",
              "",
              "pm.test(\"Created ID stored\", function () {",
              "    pm.expect(body.id).to.exist;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items/{{lastCreatedId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Get returns 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "let body = JSON.parse(pm.response.text());",
              "pm.test(\"Item ID matches\", function () {",
              "    pm.expect(body.id).to.equal(pm.environment.get(\"lastCreatedId\"));",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}