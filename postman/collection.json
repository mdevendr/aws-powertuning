{
  "info": {
    "name": "API Lambda DynamoDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Items",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items"
      }
    },
    {
      "name": "Create Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"id\":\"test-{{$timestamp}}\",\"name\":\"demo\"}"
        },
        "url": "{{apiBase}}/items"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const res = pm.response.json();",
              "  if (res && res.id) {",
              "    pm.environment.set('lastCreatedId', res.id);",
              "    console.log('✅ Stored created ID:', res.id);",
              "  } else {",
              "    console.log('⚠️ No ID returned in response. Response was:', res);",
              "  }",
              "} catch(e) {",
              "  console.log('❌ Failed to parse response:', e);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items/{{lastCreatedId}}"
      }
    }
  ]
}