{
  "info": {
    "name": "API Lambda DynamoDB",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "List Items",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items"
      }
    },
    {
      "name": "Create Item",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "let data = pm.response.json();",
              "pm.environment.set('lastCreatedId', data.id);",
              "console.log('Stored created ID:', data.id);"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"id\":\"test-{{$timestamp}}\",\"name\":\"demo\"}"
        },
        "url": "{{apiBase}}/items"
      }
    },
    {
      "name": "Get Item",
      "request": {
        "auth": {
          "type": "awsv4",
          "awsv4": {
            "accessKey": "{{awsAccessKeyId}}",
            "secretKey": "{{awsSecretAccessKey}}",
            "sessionToken": "{{awsSessionToken}}",
            "service": "execute-api",
            "region": "eu-west-2"
          }
        },
        "method": "GET",
        "url": "{{apiBase}}/items/{{lastCreatedId}}"
      }
    }
  ]
}